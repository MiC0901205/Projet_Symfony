<head>
    <link rel="stylesheet" href="./css/login_register.css">
</head>
<div class='login_register'>
        <form action="./?go={{ go }}" method="post">
        <input type="hidden" name="login_register">
        <div class="mb-3">
            <span id="err">
            {% if error %}
                <div class="alert alert-warning alert-dismissible" role="alert">
                Please fill in all fields.
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
                </div>
            {% endif %}
            </span>
        </div>
        {% if action == 'login' %}
            <h3>Connexion</h3>
            <div class="mb-3">
            <label for="email" class="form-label">Email address</label><br>
            <input type="text" id="email" name="email" class="form-control validate" aria-describedby="dateInfo">
            </div>
            <div class="mb-3">
            <label for="pass" class="form-label">Password</label><br>
            <input type="password" id="pass" name="pass" class="form-control validate" aria-describedby="dateInfo">
            </div>
            <button type="submit" class="btn btn-primary">Validate</button>
            <a href="./?register">No account?</a>
        {% else %}
        <div id="container">
            <h3>Inscription</h3>
                <div class="infosNP">
                    <div class="Nom">                    
                        <label for="lastName"><b>LastName</b></label>
                        <input type="text" placeholder="Votre nom" name="lastname" required>
                    </div>

                    <div class="Prenom" style="margin-left: 40px;">
                        <label for="firstName"><b>FirstName</b></label>
                        <input type="text" placeholder="Votre prénom" name="firstname" required>
                    </div>
                </div>   

                <label for="adress"><b>Adress</b></label>
                <input type="text" placeholder="Votre adresse" name="adress" required>    

                <label for="email"><b>Email address</b></label>
                <input type="mail" placeholder="Adresse mail" size ="30" name="email" required>

                <label for="city"><b>City</b></label>
                <input type="text" placeholder="Votre ville" name="city" required>  

                <label for="zipcode"><b>Zipcode</b></label>
                <input type="text" maxlength="5" minlength = "5" placeholder="Votre code postal" name="zipcode" required>  

                <label for="phone"><b>Phone</b></label>
                <input type="text" maxlength="10" minlength = "10" placeholder="Votre numéro de téléphone" name="phone">

                <label for="pass"><b>Password</b></label>
                <input type="password" placeholder="Mot de passe*" name="pass" required>
                <label for="pass2"><b>Confirm password</b></label>
                <input type="password" placeholder="Confirmer le mot de passe" name="pass2" required>
            
            <button type="submit" class="btn btn-primary">Valider</button>
        </div>
        {% endif %}
        </form>
</div>
